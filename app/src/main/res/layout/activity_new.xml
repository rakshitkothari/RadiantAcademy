<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbackground"
    android:weightSum="5"
    tools:context="com.radiant.testradiant.NewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ao"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/test" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:paddingTop="30dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/rl1" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageview"
            android:layout_marginTop="-150dp"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:columnCount="2"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90pt">

                <ImageView
                    android:id="@+id/i100"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/aboutus1"></ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="90pt">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_courses">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17pt">

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_admissions">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17pt">

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:src="@drawable/new_new_new_fee">

                </ImageView>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17pt">

                <ImageView
                    android:id="@+id/i5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:src="@drawable/new_new_new_scholarship">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17pt">

                <ImageView
                    android:id="@+id/i6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:src="@drawable/gallery">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17pt">

                <ImageView
                    android:id="@+id/i7"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    tools:ignore="OnClick"
                    android:onClick="browser2"

                    android:src="@drawable/new_new_new_applynow1">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17pt">

                <ImageView
                    android:id="@+id/i8"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="gmail"

                    tools:ignore="OnClick"
                    android:src="@drawable/new_new_new_contactus">

                </ImageView>

            </androidx.cardview.widget.CardView>

        </GridLayout>
    </RelativeLayout>

</ScrollView>

