<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbackground"

    tools:context="com.radiant.testradiant.AboutUsProgramme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ao"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"


            android:src="@drawable/test" />

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="0dp"

            android:layout_marginTop="110dp"
            android:layout_weight="3"
            android:columnCount="2"
            android:rowCount="2">


            <androidx.cardview.widget.CardView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10pt">

                <ImageView

                    android:id="@+id/i11"
                    android:layout_width="fill_parent"

                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_aboutradiant">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10pt">

                <ImageView
                    android:id="@+id/i12"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_whyradiant">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10pt">

                <ImageView

                    android:id="@+id/i13"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_radiantway">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10pt">

                <ImageView
                    android:id="@+id/i14"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_ourteam">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20pt">

                <ImageView
                    android:id="@+id/i15"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_new_new_careers">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/youtube"

                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_below="@+id/ao"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="80dp"

                android:src="@drawable/newyoutube" />


        </GridLayout>

    </RelativeLayout>

</ScrollView>