<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbackground"
    tools:context="com.radiant.testradiant.AdmissionsProgramme">

    <ImageView
        android:id="@+id/ao"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/test" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="0dp"
        android:layout_weight="3"
        android:layout_marginTop="100dp"
        android:columnCount="2"
        android:rowCount="2">


        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30pt">

            <ImageView

                android:id="@+id/pdfadmissionbroucher11"
                android:layout_width="fill_parent"

                android:layout_height="fill_parent"
                android:src="@drawable/adb">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30pt">

            <ImageView
                android:id="@+id/pdfinformationguide11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/new_new_new_informationguide">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"

            android:layout_marginTop="30pt">

            <ImageView

                android:id="@+id/i33"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/new_new_new_canceladmission">

            </ImageView>

        </androidx.cardview.widget.CardView>


    </GridLayout>


</RelativeLayout>