<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbackground"
    tools:context="com.radiant.testradiant.WhyChooseRadiant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ao"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/test" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text="Why Choose Radiant"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/belowchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:justificationMode="inter_word"
            android:text="Everything we do at Radiant in centred around the well-being and all-round development of the students. We have, therefore, adopted an integrated approach which enables the students to not just prepare for the exams at hand but also develop life skills. There are three key pillars of our holistic student development process:"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="340dp"
            android:layout_height="440dp"
            android:src="@drawable/whyradiantpic"
            />



    </LinearLayout>

</ScrollView>